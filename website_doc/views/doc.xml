<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Documentation main mennu -->
        <menuitem id="menu_documentation"
            parent="knowledge.menu_document" groups="base.group_user"
            name="Documentation " sequence="20"/>

        <!-- DOCUMENTATION TOC VIEWS -->
        <record id="view_documentation_toc_list" model="ir.ui.view">
            <field name="name">website.doc.toc.list</field>
            <field name="model">website.doc.toc</field>
            <field name="arch" type="xml">
                <tree string="Documentation TOC">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
        <record id="view_documentation_toc_form" model="ir.ui.view">
            <field name="name">website.doc.toc.form</field>
            <field name="model">website.doc.toc</field>
            <field name="arch" type="xml">
                <form string="Documentation TOC">
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Pages">
                            <field name="google_doc_ids" widget="many2many" domain="[('documentation_toc_id', '=', False)]"/>
                        </page>
                        <page string="Childs">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="action_documentation_toc" model="ir.actions.act_window">
            <field name="name">Documentation</field>
            <field name="res_model">website.doc.toc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_documentation_toc"
            parent="menu_documentation"
            name="Documentation ToC" action="action_documentation_toc" sequence="20"/>

        <!-- Google doc VIEWS -->
        <record id="view_documentation_google_doc_list" model="ir.ui.view">
            <field name="name">website.doc.google_doc.list</field>
            <field name="model">website.doc.google_doc</field>
            <field name="arch" type="xml">
                <tree string="Google Doc">
                        <field name="name"/>
                        <field name="doc_code"/>
                        <field name="documentation_toc_id"/>
                </tree>
            </field>
        </record>
        <record id="view_documentation_google_docform" model="ir.ui.view">
            <field name="name">website.doc.google_doc.form</field>
            <field name="model">website.doc.google_doc</field>
            <field name="arch" type="xml">
                <form string="Google Doc">
                    <group>
                        <field name="name"/>
                        <field name="doc_code"/>
                        <field name="documentation_toc_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_documentation_google_doc" model="ir.actions.act_window">
            <field name="name">Google Doc</field>
            <field name="res_model">website.doc.google_doc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_documentation_google_doc"
            parent="menu_documentation"
            name="Google Doc" action="action_documentation_google_doc" sequence="22"/>

        <!-- Pages -->
        <record id="action_page_doc_page" model="ir.actions.act_window">
            <field name="name">Documentation Page</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- TODO agregar documentation_toc_id a la vista search  y agregar los defaults-->
            <field name="context">{'search_default_documentation_toc_id': False, 'default_page': True, 'default_type': 'qweb'}</field>
            <field name="domain">[('page','=', True),('type','=', 'qweb')]</field>
        </record>
        <menuitem id="menu_forum_doc_pages"
            parent="menu_documentation" name="Documentation Page"
            action="action_page_doc_page" sequence="25"/>
